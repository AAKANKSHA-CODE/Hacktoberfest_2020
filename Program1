//Write a program to input endpoints of two lines and display whether two lines are
//parallel or intersecting each other.

import java.util.Scanner;
import java.lang.Math;
public class Program1
{
  public static void main(String[] args) 
  {
    Scanner sc = new Scanner(System.in); 
    double m1,m2;
    System.out.print("enter the 'x' coordinates of 1st endpoint of line 1: ");
      double x0 = sc.nextDouble();
    System.out.print("enter the 'y' coordinates of 1st endpoint of line 1: ");
      double y0 = sc.nextDouble();
    System.out.print("enter the 'x' coordinates of 2nd endpoint of line 1: ");
      double x1 = sc.nextDouble();
    System.out.print("enter the 'y' coordinates of 2nd endpoint of line 1: ");
      double y1 = sc.nextDouble();
   
      m1=(y0-y1)/(x0-x1);
       System.out.println("slope of line 1:- " +m1);
       
    System.out.print("enter the 'x' coordinates of 1st endpoint of line 2: ");
      double x2 = sc.nextDouble();
      System.out.print("enter the 'y' coordinates of 1st endpoint of line 2: ");
      double y2 = sc.nextDouble();
    System.out.print("enter the 'x' coordinates of 2nd endpoint of line 2: ");
      double x3 = sc.nextDouble();
      System.out.print("enter the 'y' coordinates of 1st endpoint of line 1: ");
      double y3 = sc.nextDouble();
   
      m2=(y2-y3)/(x2-x3);
       System.out.println("slope of line 1:- " +m2);
      if(m1==m2)
      System.out.print(" both lines are parallel");
      else
      System.out.print("lines are Intersecting");
      
 }
}
